# DealSure Environment Configuration - DEVELOPMENT

# Application Environment
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=dev-secret-key-for-testing-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///dealsure.db

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key-for-testing

# Bitcoin Configuration
BITCOIN_NETWORK=signet
BITCOIN_RPC_URL=https://blockstream.info/signet/api/

# Security Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_TIME_LIMIT=3600
WTF_CSRF_ENABLED=True

# Logging
LOG_LEVEL=INFO
LOG_TO_STDOUT=True

# API Configuration
API_TITLE=DealSure API
API_VERSION=v1
API_DOC_URL=/docs

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads/

# Rust Backend Configuration
RUST_LOG=info
