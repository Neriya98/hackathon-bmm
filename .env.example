# SecureDeal Environment Configuration
# Copy this file to .env and update the values

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///securedeal.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@localhost/securedeal

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# Bitcoin Configuration
BITCOIN_NETWORK=signet
BITCOIN_RPC_URL=https://blockstream.info/signet/api/
BITCOIN_RPC_USER=
BITCOIN_RPC_PASSWORD=

# Email Configuration (for production)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@securedeal.com

# Redis Configuration (for production)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_TIME_LIMIT=3600

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO
LOG_TO_STDOUT=True

# API Configuration
API_TITLE=SecureDeal API
API_VERSION=v1
API_DOC_URL=/docs

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads/

# Rust Extension Configuration
RUST_LOG=info

# Development Tools
FLASK_PROFILER_ENABLED=False
SQLALCHEMY_ECHO=False

# Testing Configuration (for test environment)
TESTING=False
WTF_CSRF_ENABLED=True
