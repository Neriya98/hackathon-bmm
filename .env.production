# DealSure Production Environment Configuration

# Application Configuration
FLASK_ENV=production
FLASK_DEBUG=False
# Note: You should set the actual SECRET_KEY in the Render dashboard
SECRET_KEY=replace_this_with_a_secure_key_in_render_dashboard

# Database Configuration
# Replace this with your actual Render PostgreSQL URL in the Render dashboard
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/dealsure

# JWT Configuration
# Note: You should set the actual JWT_SECRET_KEY in the Render dashboard
JWT_SECRET_KEY=replace_this_with_a_secure_jwt_key_in_render_dashboard

# Bitcoin Configuration
BITCOIN_NETWORK=signet
BITCOIN_RPC_URL=https://blockstream.info/signet/api/

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=INFO
LOG_TO_STDOUT=True
